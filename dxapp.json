{
  "name": "dnanexus_region_coverage",
  "title": "Single-sample region coverage",
  "summary": "Calculates the regions covered in a sample.",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "b",
      "label": "bam",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "B",
      "label": "bed",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "f",
      "label": "flank",
      "class": "int",
      "optional": true,
      "default": 5,
      "help": ""
    },
    {
      "name": "F",
      "label": "force_overwrite",
      "class": "boolean",
      "optional": true,
      "default": false,
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "o",
      "label": "outfile",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 1
      }
    },
    "interpreter": "bash",
    "release": "16.04",
    "distribution": "Ubuntu",
    "file": "src/dnanexus_region_coverage.sh"
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x2"
        }
      }
    }
  }
}
